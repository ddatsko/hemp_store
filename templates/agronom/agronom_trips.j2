{% extends 'main.j2' %}

{% block between_navs %}
    <div class="container">
        <h2 class="user-name">{{ full_name }}</h2>
    </div>
{% endblock %}

{% block right_to_nav %}
    <form class="filters" id="filters-form" onsubmit="return false;">
        <h3 class="form-title">Filters</h3>
        <label class="filter">Дата: <input class="date-input" type="number" id="min-date" placeholder="від"> - <input
                class="date-input" type="number" placeholder="до" id="max-date"></label>
        <button type="button" onclick="getItems()">Apply filters</button>
    </form>

    <script>
        async function getItems() {
            let minDate = document.getElementById('min-date').value || '0001-01-01';
            let maxDate = document.getElementById('max-date').value || '100000-01-01';

            const url = "/get_trips";
            fetch(url,
                {
                    method: "POST",
                    body: JSON.stringify({
                        'minDate': minDate,
                        'maxDate': maxDate,
                    }),
                    credentials: 'same-origin',
                    headers: new Headers({
                        'Content-Type': 'application/json'
                    })
                })
                .then(response => response.json()).then(data => {
                let list = document.getElementById('view-items');
                list.innerHTML = '';
                for (let trip of data) {
                    let item = document.createElement('li');
                    item.classList.add('card-item');
                    let itemLink = document.createElement('a');
                    itemLink.setAttribute('href', `/trip/${trip.id}`);

                    trip.with = trip.with.map((name) => "<li>" + name + "</li>");
                    itemLink.innerHTML = `
                                      <h3 class="card-name">${trip.location}</h3>
                                      <span class="city">${trip.departion} - ${trip.arrival}</span><br>
                                      <ul class="together">${trip.with.reduce((first, second) => first + second)}</ul>
                                      `;

                    item.appendChild(itemLink);
                    list.appendChild(item);
                }
            });
        }
    </script>


{% endblock %}
{% block body %}
    <h2 class="page-title">Відрядження</h2>
    <ul id="view-items">

    </ul>

{% endblock %}


